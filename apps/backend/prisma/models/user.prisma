model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String
  image          String?
  language       String    @default("en")
  firstDayOfWeek DayOfWeek @default(MONDAY)
  group          Group     @default(EVERYONE)
  homeDashboard  Int?
  refreshToken   String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Group {
  SUPER_ADMIN
  EVERYONE
}

enum DayOfWeek {
  MONDAY
  SATURDAY
  SUNDAY
}
