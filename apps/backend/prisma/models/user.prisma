model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String
  image          String?
  language       String    @default("en")
  firstDayOfWeek DayOfWeek @default(MONDAY)
  role           Role      @default(USER)
  homeDashboard  Int?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  APP_ADMIN
  ADMIN
  USER
  EVERYONE
}

enum DayOfWeek {
  MONDAY
  SATURDAY
  SUNDAY
}
